# AIOStore Environment Variables
# Copy this file to .env.local and fill in your actual values

# Development
NODE_ENV=development

# Application Settings
NEXT_PUBLIC_APP_NAME=AIOStore
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Authentication (for future use)
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-here

# Database (for future use)
DATABASE_URL=postgresql://username:password@localhost:5432/aiostore

# Supabase Configuration (Phase 2)
# Get these from your Supabase project settings
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Data Source Feature Flags (Phase 2)
# Controls whether to use mock data or Supabase data per module
DATA_SOURCE_PRODUCTS=mock        # Options: mock | supabase
DATA_SOURCE_ORDERS=mock          # Options: mock | supabase
DATA_SOURCE_CUSTOMERS=mock       # Options: mock | supabase
DATA_SOURCE_TRANSACTIONS=mock    # Options: mock | supabase
DATA_SOURCE_MESSAGES=mock        # Options: mock | supabase

# API Keys (for future use)
SHOPIFY_API_KEY=your-shopify-api-key
SHOPIFY_API_SECRET=your-shopify-api-secret
TIKTOK_SHOP_API_KEY=your-tiktok-shop-api-key
TOKOPEDIA_API_KEY=your-tokopedia-api-key

# Email (for future use)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Analytics (for future use)
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

# File Storage (for future use)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_BUCKET_NAME=aiostore-files