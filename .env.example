# AIOStore Environment Variables
# Copy this file to .env.local and fill in your actual values

# Development
NODE_ENV=development

# Application Settings
NEXT_PUBLIC_APP_NAME=AIOStore
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Supabase Configuration (Phase 2)
# Get these from your Supabase project settings
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# Write Mode Configuration (Phase 3)
# Controls whether write operations are executed or just logged
# dry = simulate & log operations (safe for development)
# live = execute operations in database (requires RLS setup)
WRITE_MODE=dry                    # Options: dry | live

# Data Source Feature Flags (Phase 2)
# Controls whether to use mock data or Supabase data per module
DATA_SOURCE_PRODUCTS=mock        # Options: mock | supabase
# Row Level Security (RLS) Configuration (Phase 3)
# CRITICAL: Enable RLS policies before switching to WRITE_MODE=live
# Apply these policies in your Supabase SQL Editor:

-- Enable RLS on products table
ALTER TABLE products ENABLE ROW LEVEL SECURITY;

-- Allow authenticated users to read products
CREATE POLICY "Authenticated users can view products" ON products
FOR SELECT USING (auth.uid() IS NOT NULL);

-- Allow authenticated users to create products
CREATE POLICY "Authenticated users can create products" ON products
FOR INSERT WITH CHECK (auth.uid() IS NOT NULL);

-- Allow authenticated users to update products
CREATE POLICY "Authenticated users can update products" ON products
FOR UPDATE USING (auth.uid() IS NOT NULL);

-- Enable RLS on orders table
ALTER TABLE orders ENABLE ROW LEVEL SECURITY;

-- Allow authenticated users to read orders
CREATE POLICY "Authenticated users can view orders" ON orders
FOR SELECT USING (auth.uid() IS NOT NULL);

-- Allow authenticated users to update orders
CREATE POLICY "Authenticated users can update orders" ON orders
FOR UPDATE USING (auth.uid() IS NOT NULL);

# API Keys (for future use)
DATA_SOURCE_ORDERS=mock          # Options: mock | supabase
DATA_SOURCE_CUSTOMERS=mock       # Options: mock | supabase
DATA_SOURCE_TRANSACTIONS=mock    # Options: mock | supabase
DATA_SOURCE_MESSAGES=mock        # Options: mock | supabase

# API Keys (for future use)
SHOPIFY_API_KEY=your-shopify-api-key
SHOPIFY_API_SECRET=your-shopify-api-secret
TIKTOK_SHOP_API_KEY=your-tiktok-shop-api-key
TOKOPEDIA_API_KEY=your-tokopedia-api-key

# Email (for future use)
